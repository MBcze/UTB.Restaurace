<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTB.Restaurace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UTB.Restaurace.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Centrální název restaurace s odkazem na domovskou stránku -->
                <h1 class="navbar-brand mx-auto">
                    <a asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: none;">Restaurace</a>
                </h1>

                <!-- Kulaté tlačítko pro přihlášení -->
                
                @{
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <a class="lbutton nav-link" asp-area="Security" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-lock"></i> Login
                        </a>
                        <button id="theme-toggle" class="lbutton" aria-label="Switch Theme">
                            <i class="bi bi-moon"></i>
                        </button>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle neco" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-person"></i> Logged as @User.Identity.Name</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item text-dark" asp-area="Security" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-1"></i> Logout</a></li>
                                    @if (User.IsInRole(nameof(Roles.Admin)))
                                    {
                                        <li><a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Meal" asp-action="Select"><i class="bi bi-egg-fried me-1"></i> All Meals</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Reservation" asp-action="Select"><i class="bi bi-calendar-check me-1"></i> All Reservations</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Users" asp-action="Select"><i class="bi bi-person-lines-fill me-1"></i> All Users</a></li>
                                    }
                                    <li><a class="dropdown-item text-dark" asp-area="User" asp-controller="UserReservation" asp-action="UserReservations"><i class="bi bi-egg-fried me-1"></i> My Reservations</a></li>
                                    <li>
                                        <button id="theme-toggle" class="lbutton drop" aria-label="Switch Theme">
                                            <i class="bi bi-moon"></i>
                                        </button>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - UTB.Restaurace - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    document.getElementById('theme-toggle').addEventListener('click', () => {
        const body = document.body;
        const themeToggleIcon = document.querySelector('#theme-toggle i');

        // Toggle theme
        body.classList.toggle('dark-theme');
        body.classList.toggle('light-theme');

        // Switch icon
        if (body.classList.contains('dark-theme')) {
            themeToggleIcon.classList.replace('bi-moon', 'bi-sun'); // Change to sun icon
        } else {
            themeToggleIcon.classList.replace('bi-sun', 'bi-moon'); // Change to moon icon
        }

        // Save the theme preference
        localStorage.setItem('theme', body.classList.contains('dark-theme') ? 'dark' : 'light');
    });

    // Apply the saved theme on page load
    document.addEventListener('DOMContentLoaded', () => {
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.body.classList.add(savedTheme + '-theme');
        const themeToggleIcon = document.querySelector('#theme-toggle i');
        themeToggleIcon.classList.add(savedTheme === 'dark' ? 'bi-sun' : 'bi-moon');
    });

</script>

