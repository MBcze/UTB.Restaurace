@model Meal
@{
    ViewData["Title"] = "Meal - Edit";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="number" step="0.1">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ImageSrc">Image Source</label>
        <input class="form-control" asp-for="ImageSrc">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Category"></label>
        <select class="form-select" asp-for="Category">
            <option value="hlavní jídlo">Hlavní Jídlo</option>
            <option value="nápoj">Nápoj</option>
            <option value="polévka">Polévka</option>
            <option value="dezert">Dezert</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Available"></label>
        <input class="form-check-input" asp-for="Available" type="checkbox">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
