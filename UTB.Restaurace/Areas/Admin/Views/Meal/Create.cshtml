@model Meal
@{
    ViewData["Title"] = "Meal - Create";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="number" step="any">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="File">Upload Image</label>
        <input id="File" class="form-control-file" asp-for="Image" style="display:none;" onchange="updateFileName()" />
        <label for="File" class="custom-file-label" id="file-label">
            <i class="bi bi-upload me-2"></i> Choose a file
        </label>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Category"></label>
        <select class="form-select" asp-for="Category">
            <option value="hlavní jídlo">Hlavní Jídlo</option>
            <option value="nápoj">Nápoj</option>
            <option value="polévka">Polévka</option>
            <option value="dezert">Dezert</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Available"></label>
        <input class="form-check-input" asp-for="Available" type="checkbox">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    <script src="~/js/Validations/PriceValidation.js"></script>
    <script src="~/js/validations/FirstLetterCapitalizedCZ.js"></script>
    <script src="~/js/Validations/FileContentValidation.js"></script>
    <script>
        function updateFileName() {
            var fileInput = document.getElementById("File");
            var fileLabel = document.getElementById("file-label");

            // Get the file name from the file input
            var fileName = fileInput.files.length > 0 ? fileInput.files[0].name : "Choose a file";

            // Update the label text with the file name
            fileLabel.textContent = fileName;
        }
    </script>
}
