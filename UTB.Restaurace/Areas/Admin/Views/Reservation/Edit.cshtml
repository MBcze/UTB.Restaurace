@model UTB.Restaurace.Domain.Entities.Reservation

@{
    ViewData["Title"] = "Edit Reservation";
}

<h1>Edit Reservation</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ReservationDate" class="form-label"></label>
        <input asp-for="ReservationDate" class="form-control" type="datetime-local" />
    </div>

    <div class="mb-3">
        <label asp-for="TotalPrice" class="form-label"></label>
        <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>