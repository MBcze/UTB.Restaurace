@model IEnumerable<User>

<h1>Manage Users</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Select" asp-route-sortColumn="Id" asp-route-sortDirection="@(ViewData["CurrentSort"] as string == "Id" && ViewData["SortDirection"] as string == "asc" ? "desc" : "asc")">
                        Id
                        <i class="bi @(ViewData["CurrentSort"] as string == "Id" ? (ViewData["SortDirection"] as string == "asc" ? "bi-caret-down-fill" : "bi-caret-up-fill") : "bi-caret-right-fill")"></i>
                    </a>
                </th>
                <th>
                    <a asp-action="Select" asp-route-sortColumn="Username" asp-route-sortDirection="@(ViewData["CurrentSort"] as string == "Username" && ViewData["SortDirection"] as string == "asc" ? "desc" : "asc")">
                        Username
                        <i class="bi @(ViewData["CurrentSort"] as string == "Username" ? (ViewData["SortDirection"] as string == "asc" ? "bi-caret-down-fill" : "bi-caret-up-fill") : "bi-caret-right-fill")"></i>
                    </a>
                </th>
                <th>
                    <a asp-action="Select" asp-route-sortColumn="Email" asp-route-sortDirection="@(ViewData["CurrentSort"] as string == "Email" && ViewData["SortDirection"] as string == "asc" ? "desc" : "asc")">
                        Email
                        <i class="bi @(ViewData["CurrentSort"] as string == "Email" ? (ViewData["SortDirection"] as string == "asc" ? "bi-caret-down-fill" : "bi-caret-up-fill") : "bi-caret-right-fill")"></i>
                    </a>
                </th>
                <th>Phone Number</th>
                <th>
                    <a asp-action="Select" asp-route-sortColumn="FirstName" asp-route-sortDirection="@(ViewData["CurrentSort"] as string == "FirstName" && ViewData["SortDirection"] as string == "asc" ? "desc" : "asc")">
                        First Name
                        <i class="bi @(ViewData["CurrentSort"] as string == "FirstName" ? (ViewData["SortDirection"] as string == "asc" ? "bi-caret-down-fill" : "bi-caret-up-fill") : "bi-caret-right-fill")"></i>
                    </a>
                </th>
                <th>
                    <a asp-action="Select" asp-route-sortColumn="LastName" asp-route-sortDirection="@(ViewData["CurrentSort"] as string == "LastName" && ViewData["SortDirection"] as string == "asc" ? "desc" : "asc")">
                        Last Name
                        <i class="bi @(ViewData["CurrentSort"] as string == "LastName" ? (ViewData["SortDirection"] as string == "asc" ? "bi-caret-down-fill" : "bi-caret-up-fill") : "bi-caret-right-fill")"></i>
                    </a>
                </th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
					<th>@user.Id</th>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Address</td>
                    <td>
                        <div class="button-group">
                            <a asp-action="Delete" asp-route-id="@user.Id" onclick="return ConfirmDelete();" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </td>
@*                     <td>
                        <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-warning">Edit</a>
                        <form action="@Url.Action("DeleteUser", new { id = user.Id })" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}

@section Scripts
                        {
    <script src="~/js/dialogs.js"></script>
    <script>
        // Add sorting functionality if necessary
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-select.css" />
}